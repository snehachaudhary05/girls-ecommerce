# Backend environment variables (local + Railway)

# Server
PORT=4000
# Optional: used when building absolute URLs (fallback local uploads)
HOST_URL=http://localhost:4000

# MongoDB
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<db>

# JWT
JWT_SECRET=<random-long-secret>
JWT_OTP_SECRET=<random-long-secret>

# Frontend URL (for Stripe redirect URLs + CORS-friendly config if you tighten CORS)
FRONTEND_URL=http://localhost:5173

# Admin (used for login and cancellation notifications)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=<choose-a-strong-password>

# Email (Nodemailer SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
SMTP_EMAIL=<your-email>
SMTP_PASSWORD=<your-app-password>

# Payments
STRIPE_API_KEY=<stripe-secret-key>
STRIPE_PUBLISHABLE_KEY=<stripe-publishable-key>
RAZORPAY_KEY_ID=<razorpay-key-id>
RAZORPAY_KEY_SECRET=<razorpay-key-secret>

# Cloudinary (recommended for Railway; persistent + CDN)
CLOUDINARY_NAME=<your-cloud-name>
CLOUDINARY_API_KEY=<your-api-key>
CLOUDINARY_API_SECRET=<your-api-secret>
